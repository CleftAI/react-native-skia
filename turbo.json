{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build:android": {
        "env": ["JAVA_HOME", "ANDROID_NDK", "ANDROID_SDK", "ANDROID_HOME"],
        "cache": false,
        "outputs": [
          "apps/*/android/build/**"
        ],
        "inputs": [
          "**/*/package.json",
          "packages/skia/android/**",
          "packages/skia/src/**",
          "packages/skia/cpp/**",
          "!packages/skia/android/build",
          "app/*/src/**",
          "apps/*/package.json",
          "app/*/android/**",
          "!app/*/android/build"
        ]
      },
      "build:ios": {
        "dependsOn": ["pod:install"],
        "cache": false,
        "outputs": [
          "apps/*/ios/build/**"
        ],
        "inputs": [
          "package.json",
          "**/*.podspec",
          "packages/skia/android/**",
          "packages/skia/src/**",
          "packages/skia/cpp/**",
          "packages/skia/ios/*",
          "apps/*/package.json",
          "app/*/src/**",
          "apps/*/ios/**",
          "!apps/*/ios/build",
          "!apps/*/ios/Pods"
        ]
      },
      "pod:install": {
        "cache": false,
        "inputs": ["**/ios/Podfile", "**/ios/Podfile.lock"],
        "outputs": ["**/ios/Pods/**"]
      },
      "lint": {},
      "tsc": {},
      "test": {},
      "build": {}
    }
  }